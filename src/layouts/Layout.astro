---
// src/layouts/Layout.astro
import "../styles/global.css";
import RetroBackground from "../components/RetroBackground.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Bitcount:wght@100..900&family=Noto+Sans+SC:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+jpg" href="/icons/548d1b7222ef9f72d814468678b04935.jpg" />
    <title>{title}</title>
  </head>
  <body
    class="bg-[#222] font-pixel text-[#2f2f2f] overflow-x-hidden min-h-screen"
  >
    <!-- 背景层 -->
    <RetroBackground />
    <!-- 内容层 -->
    <div class="relative z-10 min-h-screen flex flex-col items-center">
      <Header>010</Header>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  /* 定义全局像素字体 */
  .font-pixel {
    /* 优先使用英文像素字体，中文则使用经过 size-adjust 放大的字体 */
    font-family: "Press Start 2P", "ChineseScaled", cursive;
  }

  /* 定义复古滚动条 */
  ::-webkit-scrollbar {
    width: 12px;
  }
  ::-webkit-scrollbar-track {
    background: #222;
  }
  ::-webkit-scrollbar-thumb {
    background: #ff6b6b;
    border: 2px solid #2f2f2f;
  }
</style>
